# =================================
# Скопируй в .env и заполни свои значения!
# =================================

# =================================
# База данных (Docker)
# =================================
DB_HOST=mysql
DB_NAME=gymboss_db
DB_USER=gymboss
DB_PASS=your_secure_password_16_chars_min

# =================================
# Docker MySQL (создание БД при первом запуске)
# =================================
MYSQL_ROOT_PASSWORD=your_root_password_16_chars_min
MYSQL_DATABASE=gymboss_db
MYSQL_USER=gymboss
MYSQL_PASSWORD=your_gymboss_password_16_chars_min

# =================================
# API ключи (получи на сайтах сервисов)
# =================================
DADATA_API_KEY=your_dadata_api_key_here
YANDEX_MAPS_KEY=your_yandex_maps_api_key_here

# =================================
# Платежи YooKassa (test_ для тестов, live_ для продакшена)
# =================================
YOOKASSA_SHOP_ID=your_shop_id_6_digits
YOOKASSA_API_KEY=test_your_secret_key_or_live_key

# =================================
# reCAPTCHA (Google reCAPTCHA admin console)
# =================================
GOOGLE_RECAPTCHA_SITE_KEY=6Lxxxxxxxxxxxxxxxxxxxxxx
GOOGLE_RECAPTCHA_SECRET_KEY=6Lxxxxxxxxxxxxxxxxxxxxxx

# =================================
# SMS (SMSC.ru личный кабинет)
# =================================
SMSC_LOGIN=your_smsc_login
SMSC_PASSWORD=your_smsc_password
SMSC_POST=0
SMSC_HTTPS=1
SMSC_CHARSET=utf-8
SMSC_DEBUG=0
SMSC_SENDER=your_phone_number_or_name
SMSC_TEST_MODE=true

# =================================
# Приложение
# =================================
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com